<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>New Resource Category</h1>
    <%= form_tag "/resource_categories", method: :post do%>
    <form class="form-horizontal">
      <div class="form-group">
        <%= label_tag :name%>
        <%= text_field_tag :name,@resource_category.name, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :description%>
        <%= text_field_tag :description,@resource_category.description, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= submit_tag "Create Record"%>
      </div>
    </form>
    <%end%>
  </div>
</div>