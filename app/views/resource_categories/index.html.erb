<!-- Start: Header Section
================================ -->
<section class="features-section relative subscrive-section background-2">
    <div class="container">
        <div class="row features-item section-separator">
            
            <% if current_user && current_user.admin %>
            <div class="each-item col-sm-8 col-sm-offset-2 col-xs-12 text-center">
                <div class="inner">
                      <%= link_to "Add new resource category", "/resource_categories/new", class: "btn btn-fill btn-color" %>
                </div>
            </div>
            <% end %>
          
            <div class="each-item-big col-sm-8 col-sm-offset-2 col-xs-12">
                <div class="inner">
                    
                    <%= form_tag "/resources/search", class: "single-form search-form search-big", method: :post do %>
                      <div class="input-group">
                          <%= text_field_tag :user_search, nil, placeholder:"Type what do you want to learn today?", class: "form-control" %>
                          <span class="input-group-btn">
                              <button class="btn" type="submit" name="commit" data-disable-with="Search"><i class="fa fa-search"></i></button>
                          </span>
                      </div><!-- /.input-group -->
                    <% end %> 

                </div>
            </div>

            
            <div class="clearfix"></div>
            
            <div class="tag-list light-text matchHeight text-left">
                <% @resouces.each do |resource| %>
                <div class="each-item col-md-3 col-sm-4 col-xs-12">
                    <a href="/resources/<%= resource.id %>" title="<%= resource.name %>">
                        <div class="inner relative bg-cover bg-overlay-dark" style="background-image: url(<%= asset_path 'resources.png' %>);">
                            <h4 class="title"><%= resource.name %> <small>&nbsp;&nbsp;&nbsp;<i class="fa fa-long-arrow-right"></i></small></h4>
                        </div>
                    </a>
                </div>
                <% end %>
            
            </div>
            
            <div class="col-xs-12 margin-t-50">
                <div class="row">
                  
                    <div class="each-item-big business-item col-md-6 col-sm-12">
                        <!--<div class="inner">-->
                        
                        <!-- Start: Section Header -->
                        <div class="section-header text-left">
                            <h2 class="section-heading">Bitcoin Social Media Feeds</h2>
                        </div> <!-- End: Section Header -->
                        
                        <div class="shadow">
                            <a class="twitter-timeline" href="https://twitter.com/bitcoin">Tweets by @bitcoin</a>
                        </div>
                        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
                        </script> 
        
                        <!--</div>-->
                    </div>
                    <div class="each-item-big business-item col-md-6 col-sm-12">
                        <!--<div class="inner">-->
                        
                        <!-- Start: Section Header -->
                        <div class="section-header text-left">
                            <h2 class="section-heading">Reddit</h2>
                        </div> <!-- End: Section Header -->
                        
                        <div id="reddit" class="text-left shadow"> </div> 
        
                        <!--</div>-->
                    </div>
                </div>
            </div>
                    
        </div> <!-- End: .row -->
    </div> <!-- End: .container -->
</section>
<!-- End: Header Section
================================ -->