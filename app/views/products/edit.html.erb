<h1>Welcome and move out in style</h1>
<h3> Edit Product </h3>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-4">
    <ul class="info-background">
      <%= form_tag "/products/#{@product.id}", method: :patch do%>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "form-control" %>
    </div> 
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :price%>
      <%= text_field_tag :price, @product.price, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag :size%>
      <%= text_field_tag :size, @product.size, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= submit_tag "Update Record"%>
    </div>
  </form>

  <%end%>