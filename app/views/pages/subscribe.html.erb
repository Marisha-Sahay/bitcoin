                                    <!--  End: Video Area  -->
                                    <div class="col-xs-12 margin-t-20">
                                        <h3><%= video[0] %></h3>
                                        <div class="details">
                                            <% video_content = video[2].html_safe %>
                                            <%= video_content %>
                                        </div>
                                    </div>
                                   
                                </div>
                            </div> <!-- End: .item -->
                            <%  end 
                            count += 1
                            end %>
                            
                        </div> <!-- End: .carousel-wrapper -->
                    </div> <!-- End: .carousel-container -->
                    
                </div> <!-- End: .each-item -->
                        
            </div> <!-- End: .row -->
        </div> <!-- End: .container -->
    </section>
