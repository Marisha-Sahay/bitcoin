    <section class="features-section relative background-2 subscrive-section">
        <div class="container">
            <div class="row matchHeight features-item section-separator-small sp-top">
                
                <div class="each-item business-item col-md-4 col-sm-12">
                  
                    <!-- Start: Section Header -->
                    <div class="section-header text-left">
                        <h2 class="section-heading">Trending News</h2>
                        <!--<hr class="lines">-->
                    </div> <!-- End: Section Header -->
    
                    <div class="carousel-container margin-b-50 features-content">
                        <div class="carousel-wrapper owl-carousel inner-small shadow">
                            
                            <% 
                            count = 1 
                            @posts.each_slice(3) do |array_of_items| 
                                if count <= 3
                                    count += 1
                            %>
                            <div class="item">
                                <div class="item-inner ">
                                  <ul class="nav recent-post text-left">
                                    
                                  <% array_of_items.each do |post|%>
                                    <li>
                                        <a href="<%= post['url'] %>" target="_blank">
                                            <div class="media">
                                                <div class="media-left">
                                                  <% if post['urlToImage'] %>
                                                    <div class="image-container bg-cover" style="background-image: url(<%= post['urlToImage'] %>); height: 59px;width: 80px;"></div>
                                                  <% else %>
                                                    <div class="image-container bg-cover" style="background-image: url(<%= asset_path 'bitcoins-default.jpg' %>); height: 59px;width: 80px;"></div>
                                                  <% end %>
                                                </div>
                                                <div class="media-body">
                                                    <p class="post-title"><%= post['title'] %></p>
                                                    <p class="details"><%= post['description'][0..60] %>...</p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                    <% end %> 
                                  
                                  </ul>
                                </div>
                            </div> <!-- End: .item -->
                            <% 
                                end 
                            end 
                            %>
                            
                        </div> <!-- End: .carousel-wrapper -->
                    </div> <!-- End: .carousel-container -->
                    
                </div> <!-- End: .each-item -->
                <div class="each-item business-item col-md-4 col-sm-12">
                  
                    <!-- Start: Section Header -->
                    <div class="section-header text-left">
                        <h2 class="section-heading">Featured Content</h2>
                        <!--<hr class="lines">-->
                    </div> <!-- End: Section Header -->
    
                    <div class="carousel-container margin-b-50 features-content">
                        <div class="carousel-wrapper owl-carousel inner-small shadow">
                          
                            <% count = 1
                            @contents.each do |content| 
                            if count <= 3 %>
                            <div class="item">
                                <div class="item-inner content-small text-left">
                                    
                                  <!-- Start: Section Header -->
                                  <div class="section-header no-margin">
                                      <a href="<%= content.news_url %>"><h3 class="title"><%= content.title %></h3></a>
                                      <!--<p class="post-meta">-->
                                      <!--    By <a href="#">thomas been</a>, <a href="#">May 15, 2015</a> -->
                                      <!--</p>-->
                                  </div>
                                  <!-- End: Section Header -->
    
                                  <div class="detail">
                                      <p><%= content.description[0..400] %></p>
                                  </div>
    
                                  <!-- Button Area -->
                                  <div class="btn-form ">
                                      <a href="<%= content.news_url %>" class="btn right-icon read-more">CONTINUE READING <i class="fa fa-long-arrow-right"></i></a>
                                  </div>
    
                                </div>
                            </div> <!-- End: .item -->
                            <%  end 
                            count += 1
                            end %>
                            
                        </div> <!-- End: .carousel-wrapper -->
                    </div> <!-- End: .carousel-container -->
                    
                </div> <!-- End: .each-item -->
                <div class="each-item business-item col-md-4 col-sm-12">
