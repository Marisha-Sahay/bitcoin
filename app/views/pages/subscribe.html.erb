<script type="text/javascript">
$("#myElem").show();
setTimeout(function() { $("#myElem").fadeOut(1600); }, 5000);
$( "#clickme" ).click(function() {
  $( "#myElem" ).toggle();
  setTimeout(function() { $("#myElem").fadeOut(1600); }, 5000);
});
</script>