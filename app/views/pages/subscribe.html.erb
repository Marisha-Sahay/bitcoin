                                <div class="item-inner text-left">
                                    <% if video.link.include? "youtube" %>
                                        <% str1 = "#{video.link}" %>
                                        <% str2 = str1.split("=") %>
                                        <div class="video background-2">
                                        <%= content_tag(:iframe,'', src: "https://www.youtube.com/embed/#{str2[1]}", class: "video-async") %>
                                        </div>
                                    <% end %>
                                    <!--  End: Video Area  -->
                                </div>
                            </div> <!-- End: .item -->
                            <%  end 
                            count += 1
                            end %>
                            
                        </div> <!-- End: .carousel-wrapper -->
                    </div> <!-- End: .carousel-container -->
                    
                </div> <!-- End: .each-item -->
                        
