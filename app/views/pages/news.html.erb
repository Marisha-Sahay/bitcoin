<div class="news-container">
  <div class="news-content">
    <% @posts.each do |post| %>
      <div class="news-post">
        <h2><%= post.title %></h2>
        <br>
        <p class="news-icons">
          <div class="addthis_inline_share_toolbox"></div>
          <i class="fa fa-facebook" aria-hidden="true"></i> : <%= post.facebook_share %>
          <i class="fa fa-linkedin" aria-hidden="true"></i> : <%= post.linkedin_share %>
         </p>
        <div class="news-block">
          <p class="news-img">
            <% if post.main_image %>
              <%= link_to image_tag("#{post.main_image}",class: "news-image"), "#{post.news_url}", target: :_blank%>
            <% else %>
              <%= link_to image_tag("bitcoins-default.jpg",class: "news-image"), "#{post.news_url}", target: :_blank %>
            <% end %>
          </p>
          <p class="news-author"><%= post.published%> / <%= post.author %></p>
          <p class="news-para"><%= post.description[0..1000] %> <%= link_to "Read More", "#{post.news_url}", target: :_blank %></p>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>

