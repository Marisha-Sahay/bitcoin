<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>New Image</h1>
    <%= form_tag "/images", method: :post do%>
    <form class="form-horizontal">
      <div class="form-group">
        <%= label_tag :url%>
        <%= text_field_tag :url,"", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= collection_select :product, :product_id, Product.all, :id, :name %>
      </div>
      <div class="form-group">
        <%= submit_tag "Create Image"%>
      </div>
    </form>
    <%end%>